{
  "name": "base-react-typescript-project",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Lucian Caetano",
    "url": "https://github.com/luciancaetano"
  },
  "repository": {
    "type": "GIT",
    "url": "https://github.com/luciancaetano/base-react-typescript-project"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco start",
    "start:prod": "cross-env NODE_ENV=production DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco start",
    "build:dev": "cross-env NODE_ENV=development DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco build",
    "build:prod": "cross-env NODE_ENV=production DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco build",
    "eject": "craco eject",
    "lint": "eslint ./src --ext .tsx --ext .ts",
    "lint:fix": "eslint --fix ./src --ext .tsx --ext .ts",
    "stylelint": "stylelint \"src/**/*.scss\" --syntax scss",
    "stylelint:fix": "stylelint \"src/**/*.scss\" --syntax scss --fix",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.52.0",
    "@blueprintjs/icons": "^3.31.0",
    "@blueprintjs/table": "^3.9.13",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.4.2",
    "@types/classnames": "^2.3.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "axios": "^0.21.2",
    "classnames": "^2.3.1",
    "clsx": "^1.1.1",
    "eslint": "^8.6.0",
    "i18next": "^21.3.2",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "normalize.css": "^8.0.1",
    "query-string": "^7.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.12.0",
    "react-redux": "^7.2.5",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "redux": "^4.1.1",
    "redux-devtools-extension": "^2.13.9",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "sass": "^1.46.0",
    "seamless-immutable": "^7.1.4",
    "sweetalert2": "^11.3.3",
    "typescript": "^4.4.4",
    "use-debounce": "^7.0.0",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@namics/stylelint-bem": "^6.3.4",
    "@types/lodash": "^4.14.175",
    "@types/react-redux": "^7.1.19",
    "@types/react-router-dom": "^5.3.1",
    "@types/seamless-immutable": "^7.1.16",
    "@types/uuid": "^8.3.1",
    "craco": "^0.0.3",
    "craco-alias": "^3.0.1",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "http-server": "^13.0.2",
    "husky": "^7.0.2",
    "jest": "^27.3.0",
    "jest-useragent-mock": "^0.1.1",
    "lint-staged": "^11.2.3",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^13.13.1",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.21.0",
    "ts-jest": "^27.0.7"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix"
    ],
    "src/**/*.css": [
      "stylelint --fix"
    ]
  }
}
