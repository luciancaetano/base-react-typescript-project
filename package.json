{
  "name": "base-react-typescript-project",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Lucian Caetano",
    "url": "https://github.com/luciancaetano"
  },
  "repository": {
    "type": "GIT",
    "url": "https://github.com/luciancaetano/base-react-typescript-project"
  },
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco start",
    "start:prod": "cross-env NODE_ENV=production DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco start",
    "build:dev": "cross-env NODE_ENV=development DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco build",
    "build:prod": "cross-env NODE_ENV=production DISABLE_ESLINT_PLUGIN=true SKIP_PREFLIGHT_CHECK=true craco build",
    "eject": "craco eject",
    "lint": "eslint ./src --ext .tsx --ext .ts",
    "lint:fix": "eslint --fix ./src --ext .tsx --ext .ts",
    "stylelint": "stylelint \"src/**/*.scss\" --syntax scss",
    "stylelint:fix": "stylelint \"src/**/*.scss\" --syntax scss --fix",
    "test": "jest --coverage"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "clsx": "^1.2.1",
    "i18next": "^22.0.2",
    "lens-ui": "^5.0.3",
    "localforage": "^1.10.0",
    "lodash-es": "^4.17.21",
    "query-string": "^7.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.0.0",
    "react-router": "^6.4.2",
    "react-router-dom": "^6.4.2",
    "react-scripts": "5.0.1",
    "seamless-immutable": "^7.1.4",
    "typescript": "^4.8.4",
    "use-debounce": "^8.0.4",
    "uuid": "^9.0.0",
    "web-vitals": "^3.0.4",
    "zustand": "^4.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@namics/stylelint-bem": "^8.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/classnames": "^2.3.0",
    "@types/jest": "^29.2.0",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.4",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/react-i18next": "^8.1.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/seamless-immutable": "^7.1.16",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "craco": "^0.0.3",
    "craco-alias": "^3.0.1",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "jest-useragent-mock": "^0.1.1",
    "lint-staged": "^13.0.3",
    "sass": "^1.55.0",
    "start-server-and-test": "^1.14.0",
    "stylelint": "^14.14.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "ts-jest": "^29.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix"
    ],
    "src/**/*.css": [
      "stylelint --fix"
    ]
  }
}
